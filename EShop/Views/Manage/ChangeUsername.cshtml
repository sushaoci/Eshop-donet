@using Microsoft.AspNet.Identity
@model EShop.Models.ChangeUsernameViewModel

@{
    ViewBag.Title = "更改用户名";
    ViewData["oldUsername"]= User.Identity.GetUserName();
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangeUsername", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>更改用户名表单</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldUsername, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @ViewData["oldUsername"]
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewUsername, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewUsername, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="更改用户名" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

